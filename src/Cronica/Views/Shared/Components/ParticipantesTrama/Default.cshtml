@model VistaParticipantesTramas

@{
    if (Model.TipoTrama == TipoTrama.Individual)
    {
        <div class="form-group">
            <label asp-for="Participante" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="Participante" asp-items="Model.Participantes" class="form-control"></select>
            </div>
        </div>
    }
    else if (Model.TipoTrama == TipoTrama.Colaborativa)
    {
        <div class="form-group">
            <label asp-for="Participantes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ParticipantesIds" asp-items="Model.Participantes" multiple class="form-control"></select>
            </div>
        </div>
    }
    else if (Model.TipoTrama == TipoTrama.Enfrentada)
    {
        <div class="form-group">
            <label asp-for="Participantes" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                @{
                    var grupos = Enum.GetValues(typeof(TipoEquipo)).Cast<TipoEquipo>();
                    foreach (var grupo in grupos)
                    {
                        <div class="col-md-3">
                            <label class="control-label">Grupo @grupo.ToString()</label>
                            <select asp-for="GrupoParticipantesIds[(int)grupo]" asp-items="Model.GrupoParticipantes[(int)grupo]" multiple class="form-control"></select>
                        </div>
                    }
                }
            </div>
        </div>
    }
}

