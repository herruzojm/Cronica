@model PostPartida

@{
    ViewData["Title"] = "Editar Entre Partidas";
}

<h2>@ViewData["Title"]: <b>@Model.PostPartidaId.ToString()</b></h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="PostPartidaId" />
        <ul class="nav nav-pills">
            <li class="active"><a data-toggle="tab" href="#EntrePartida">Entre Partida</a></li>
            <li><a data-toggle="tab" href="#Interludios">Interludios</a></li>
        </ul>
        <div class="tab-content clearfix">
            <div id="EntrePartida" class="tab-pane active">
                @*<div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <input asp-for="Cerrada" />
                            <label asp-for="Cerrada"></label>
                        </div>
                    </div>
                </div>*@
                <div class="form-group">
                    <label asp-for="FechaInicio" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="FechaInicio" class="form-control datepicker" />
                        <span asp-validation-for="FechaInicio" class="text-danger" />
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="FechaFin" class="col-md-2 control-label"></label>
                    <div class="col-md-10">
                        <input asp-for="FechaFin" class="form-control datepicker" />
                        <span asp-validation-for="FechaFin" class="text-danger" />
                    </div>
                </div>
            </div>
            <div id="Interludios" class="tab-pane">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>                            
                            <th>
                                @Html.DisplayNameFor(model => model.PasaTramas.FirstOrDefault().Actual)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PasaTramas.FirstOrDefault().Resuelto)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PasaTramas.FirstOrDefault().FechaPrevista)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PasaTramas.FirstOrDefault().FechaResolucion)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.PasaTramas.FirstOrDefault().PuedeResolverse)
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model.PasaTramas)
                        {
                            <tr>
                                <td>
                                    <a asp-controller="Interludios" asp-action="Edit" asp-route-id="@item.PasaTramaId">Editar</a> |
                                    <a asp-controller="Interludios" asp-action="Delete" asp-route-id="@item.PasaTramaId">Borrar</a>
                                </td>                                
                                <td>
                                    @Html.DisplayFor(modelItem => item.Actual)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Resuelto)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaPrevista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaResolucion)
                                </td>
                                <td>
                                    @if (item.PuedeResolverse)
                                    {
                                        <a asp-controller="Interludios" asp-action="ResolverInterludio" asp-route-id="@item.PasaTramaId">Resolver</a>
                                    }
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
                <a class="btn btn-default btn-info" asp-controller="Interludios" asp-action="Create" asp-route-id="@Model.PostPartidaId">Nuevo Interludio</a> 
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
