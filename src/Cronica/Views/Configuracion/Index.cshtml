@model Configuracion

@{
    ViewData["Title"] = "Editar Atributo";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Index">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ConfiguracionId" />
        <div class="form-group">
            <label asp-for="DireccionBase" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DireccionBase" class="form-control" />
                <span asp-validation-for="DireccionBase" class="text-danger" />
            </div>
        </div>        
        <div class="form-group">
            <label asp-for="Email" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PorcentajeAliados" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PorcentajeAliados" class="form-control" />
                <span asp-validation-for="PorcentajeAliados" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PorcentajeContactos" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PorcentajeContactos" class="form-control" />
                <span asp-validation-for="PorcentajeContactos" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PorcentajeInfluencia" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PorcentajeInfluencia" class="form-control" />
                <span asp-validation-for="PorcentajeInfluencia" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PorcentajeMentor" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PorcentajeMentor" class="form-control" />
                <span asp-validation-for="PorcentajeMentor" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
