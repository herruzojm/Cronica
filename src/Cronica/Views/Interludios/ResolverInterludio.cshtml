@model Interludio

@{
    ViewData["Title"] = "Resolver Interludio";
}

<h2>@ViewData["Title"]: <b>@Model.InterludioId.ToString()</b></h2>

<form asp-action="ResolverInterludio">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="InterludioId" />
        <div class="form-group">
            <label asp-for="FechaPrevista" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input readonly asp-for="FechaPrevista" class="form-control" />
                <span asp-validation-for="FechaPrevista" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FechaResolucion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input readonly asp-for="FechaResolucion" class="form-control" />
                <span asp-validation-for="FechaResolucion" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EntrePartidaId" class="control-label col-md-2">EntrePartidaId</label>
            <div class="col-md-10">
                <input readonly asp-for="EntrePartidaId" class="form-control" />
                <span asp-validation-for="EntrePartidaId" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input readonly asp-for="Resuelto" />
                    <label asp-for="Resuelto"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-warning" asp-route="AbrirEntrePartida" asp-route-id="@Model.EntrePartidaId">Volver al PostPartida</a>
                <input type="submit" value="Resolver" class="btn btn-default btn-danger" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}