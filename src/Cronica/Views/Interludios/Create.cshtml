@model Interludio

@{
    ViewData["Title"] = "Nuevo Interludio";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">        
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="EntrePartidaId" />
        <div class="form-group">
            <label asp-for="FechaPrevista" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="FechaPrevista" asp-format="{0:d}" class="form-control datepicker" />
                <span asp-validation-for="FechaPrevista" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="FechaResolucion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input readonly asp-for="FechaResolucion" class="form-control datepicker" />
                <span asp-validation-for="FechaResolucion" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="EntrePartidaId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input readonly asp-for="EntrePartidaId" class="form-control" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <div class="checkbox">
                    <input asp-for="Resuelto" readonly />
                    <label asp-for="Resuelto"></label>
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-warning" asp-route="AbrirPostPartida" asp-route-id="@Model.EntrePartidaId">Volver al PostPartida</a>
                <input type="submit" value="Crear Interludio" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
