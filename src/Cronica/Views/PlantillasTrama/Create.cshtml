@model PlantillaTrama

@{
    ViewData["Title"] = "Crear Plantilla";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nombre" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="TipoTrama" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="TipoTrama" asp-items="Html.GetEnumSelectList<TipoTrama>()" class="form-control"></select>
                <span asp-validation-for="TipoTrama" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Descripcion" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PuntosDePresionPorTiemppo" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PuntosDePresionPorTiemppo" class="form-control" />
                <span asp-validation-for="PuntosDePresionPorTiemppo" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="PuntosNecesarios" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="PuntosNecesarios" class="form-control" />
                <span asp-validation-for="PuntosNecesarios" class="text-danger" />
            </div>
        </div>

        <h3>Atributos</h3>
        @for (int i = 0; i < Model.Atributos.Count(); i++)
        {
            <div class="form-group">
                <input type="hidden" asp-for="Atributos[i].AtributoId" />
                <input type="hidden" asp-for="Atributos[i].PlantillaTramaId" />
                <label asp-for="Atributos[i].PlantillaTramaId" class="col-md-2 control-label">@Model.Atributos[i].Atributo.Nombre</label>
                <div class="col-md-10">
                    <input asp-for="Atributos[i].Multiplicador" class="form-control" />
                    <span asp-validation-for="Atributos[i].Multiplicador" class="text-danger" />
                </div>
            </div>
        }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <a class="btn btn-warning" asp-action="Index">Volver</a>
                <input type="submit" value="Crear" class="btn btn-default btn-success" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
