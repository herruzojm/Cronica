@model PreferenciasUsuario
@{
    ViewData["Title"] = "Administrar Preferencias";
}

<h2>@ViewData["Title"]</h2>

<form asp-controller="Manage" asp-action="CambiarPreferencias">
    <hr />
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <input asp-for="MailPorNotificacion" />
                <label asp-for="MailPorNotificacion">Enviadme un email cada vez que reciba un mensaje de la partida</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <div class="checkbox">
                <input asp-for="MailPorInterludio" />
                <label asp-for="MailPorInterludio">Enviadme un email cada vez que se resuelva un interludio</label>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Actualizar Preferencias</button>
        </div>
    </div>
</form>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
