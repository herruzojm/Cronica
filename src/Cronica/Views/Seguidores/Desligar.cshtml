@model PersonaTrasfondo

@{
    ViewData["Title"] = "Quitar Seguidor";
}

<h2>Quitar Seguidor</h2>

<div>
    <h3>Confirma quitar el seguidor al jugador</h3>
    <hr />
    <form asp-action="Desligar">
        <input type="hidden" asp-for="PersonajeJugadorId" />
        <input type="hidden" asp-for="TrasfondoRelacionadoId" />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.PersonajeJugador)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.PersonajeJugador.Nombre)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.TrasfondoRelacionado)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.TrasfondoRelacionado.Nombre)
            </dd>
        </dl>


        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" />
            <a class="btn btn-warning" asp-route="AbrirPersonaje" asp-route-id="@Model.PersonajeJugadorId">Volver al Personaje</a>
        </div>
    </form>
</div>
